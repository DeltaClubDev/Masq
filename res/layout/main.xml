<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/manageDesc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/manage_desc" />
    <Button
        android:id="@+id/keyManage"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="@string/key_manage" />
    
    <TextView
        android:id="@+id/smsDesc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/sms_desc" />
    <Button
        android:id="@+id/sendMessage"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="@string/send_message" />

    <Button
        android:id="@+id/recvMessage"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="@string/recv_message" />

    <TextView
        android:id="@+id/steganDesc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/stegan_desc" />

    <Button
        android:id="@+id/sendSteganograph"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="@string/send_steganograph" />

    <Button
        android:id="@+id/recvSteganograph"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="@string/recv_steganograph" />
    
</LinearLayout>