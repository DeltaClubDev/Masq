<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.secretconversations"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-permission android:name="android.permission.WRITE_SMS" />
	<uses-permission android:name="android.permission.READ_SMS" />
	
    <uses-permission android:name="android.permission.WRITE_MMS"/>
    <uses-permission android:name="android.permission.READ_MMS"/>
    
    <uses-permission android:name="android.permission.READ_CONTACTS"/>
	
    <uses-sdk android:minSdkVersion="7" />

    <application
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name" >
        <activity
            android:name="com.rcythr.secretsms.SecretConversationsActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        
        <activity
            android:name="com.rcythr.secretsms.SMSSending"
            android:label="@string/app_name" >
        </activity>
        
        <activity
            android:name="com.rcythr.secretsms.SMSListing"
            android:label="@string/app_name" >
        </activity>
    </application>

</manifest>